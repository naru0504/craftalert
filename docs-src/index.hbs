        <div class="buttons">
          <span class="button"></span>
          <span class="button"></span>
          <span class="button"></span>
        </div>

        <div class="command">
          npm install craftalert
        </div>
      </div>

    </div>


    <div class="cral-modal-example" data-type="success">

      <div class="example-content success show">
        <div class="cral-icon cral-icon--success">
          <div class="cral-icon--success__line cral-icon--success__line--long"></div> 
          <div class="cral-icon--success__line cral-icon--success__line--tip"></div> 

          <div class="cral-icon--success__ring"></div> 
          <div class="cral-icon--success__hide-corners"></div> 
        </div>

        <h3 class="cral-title">
          You've arrived!
        </h3>
        <p class="cral-text">
          How lovely. Let me take your coat.
        </p>
      </div>

      <div class="example-content error">

        <div class="cral-icon cral-icon--error">
          <div class="cral-icon--error__x-mark">
            <span class="cral-icon--error__line cral-icon--error__line--left"></span>
            <span class="cral-icon--error__line cral-icon--error__line--right"></span>
          </div>
        </div>

        <h3 class="cral-title">
          Oops!
        </h3>
        <p class="cral-text">
          Seems like something went wrong!
        </p>
      </div>

      <div class="example-content warning">
        <div class="cral-icon cral-icon--warning">
          <span class="cral-icon--warning__body">
            <span class="cral-icon--warning__dot"></span>
          </span>
        </div>

        <h3 class="cral-title">
